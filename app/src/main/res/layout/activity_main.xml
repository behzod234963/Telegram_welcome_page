<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:backgroundTint="@color/white"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/rlWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlBlack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="383dp"
            android:layout_weight="2"
            android:gravity="center|end">

            <ImageView
                android:id="@+id/ivTheme"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/pic_darktheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/frFragment"
                android:name="com.example.telegramwelcomepage.fragments.TelegramFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.6"
            android:gravity="center"
            android:paddingHorizontal="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="button.json"
                    app:lottie_loop="true" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@android:color/transparent"
                    android:text="Start Messaging"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:backgroundTint="@null" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>