<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.TelegramFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lavMainAnim"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_fileName="telegram.json"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Telegram"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/tvText"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="The world's fastest messaging app \nit is free and secure"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:gravity="center|top">
            <ImageView
                android:id="@+id/ivSwitch1"
                android:layout_marginTop="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/pic_circleblue"/>
            <ImageView
                android:id="@+id/ivSwitch2"
                android:layout_marginTop="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/pic_circlegray"/>
            <ImageView
                android:id="@+id/ivSwitch3"
                android:layout_marginTop="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/pic_circlegray"/>
            <ImageView
                android:id="@+id/ivSwitch4"
                android:layout_marginTop="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/pic_circlegray"/>
            <ImageView
                android:id="@+id/ivSwitch5"
                android:layout_marginTop="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/pic_circlegray"/>
            <ImageView
                android:id="@+id/ivSwitch6"
                android:layout_marginTop="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/pic_circlegray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>